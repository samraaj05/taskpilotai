{
  "name": "Comment",
  "type": "object",
  "properties": {
    "task_id": {
      "type": "string"
    },
    "project_id": {
      "type": "string"
    },
    "author_email": {
      "type": "string"
    },
    "content": {
      "type": "string"
    },
    "mentions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Mentioned user emails"
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      }
    },
    "is_edited": {
      "type": "boolean",
      "default": false
    },
    "parent_comment_id": {
      "type": "string",
      "description": "For threaded replies"
    }
  },
  "required": [
    "task_id",
    "author_email",
    "content"
  ]
}